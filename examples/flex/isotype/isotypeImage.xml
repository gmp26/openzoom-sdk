<?xml version="1.0"?>
<isotypeImage>

	<!-- 
	We draw on a canvas to define an isotype drawing. A small rectangle
	- we'll call it an isocel - of the image will select an isotype. 
	For square isotypes an isocel will be exactly one pixel. When
	the isotype is viewed at higher zoom levels, it is drawn on a 
	background colour specified by the isocel.
	-->
	<isocel width="1" height="1" background="0x000000"/>
	
	<!-- 
	isotypes may be embedded or loaded from a url. If there
	is no url attribute, they are embedded.
	-->
	
	<isotype id="winner" />
	<isotype id="loser" />
 	
 	<!-- The isocanvas element configures the isocanvas drawing class. Pass whatever
 	parameters are needed to draw the image.
 		@isoWidth = the width in isocels
 		@isoHeight = the height in isocels
 	 -->
	<isocanvas width="1048576" height="1048576" tileWidth="256" tileHeight="256" drawing="Lottery">
		<!-- declare drawing functions and parameters here if needed -->
		<function name="barChart">
			<param>
				<isotype name="winner" value="1"/>
				<isotype name="loser" value="13983816" />
			</param>
		</function>
	</isocanvas>
	
</isotypeImage>
